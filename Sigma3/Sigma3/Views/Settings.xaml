<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sigma3.Views.Settings"
             Title="Settings"
             >
    <TableView HasUnevenRows="True" Intent="Settings">
        <TableRoot>
            <TableSection Title="Connected Cadence Sensor">
                <EntryCell x:Name="EntryName" Label="Display Name:" />
                <TextCell
                    x:Name="CellId"
                    Text="Id"
                  />
                <TextCell
                    x:Name="SetupSensor"
                    StyleId="disclosure"
                    Tapped="SetupSensor_Tapped"
                    Text="Setup Sensor"
                   />
                <TextCell
                    x:Name="BuyCadence"
                    StyleId="disclosure"
                    Tapped="BuyCadence_Tapped"
                    Text="Buy Cadence Sensor"
                  />
            </TableSection>
        </TableRoot>
    </TableView>
</ContentPage>