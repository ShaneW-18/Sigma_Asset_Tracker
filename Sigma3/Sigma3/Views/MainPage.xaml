<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sigma3.MainPage"
             BackgroundColor="Black"
             xmlns:sigmans="clr-namespace:Sigma3.Views"
             xmlns:android="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core"
             android:TabbedPage.ToolbarPlacement="Bottom"
             BarBackgroundColor="Black"
             SelectedTabColor="White"
             UnselectedTabColor="Gray"
             NavigationPage.HasBackButton="False">


    <NavigationPage.TitleView>
        <StackLayout Orientation="Horizontal">

            <Label x:Name="TopTitle" Text="Sigma"
                   HorizontalOptions="CenterAndExpand"
                   VerticalOptions="CenterAndExpand"
                   FontAttributes="Bold"
                   FontSize="20"
                   TextColor="white"/>

        </StackLayout>
    </NavigationPage.TitleView>
    <sigmans:Home IconImageSource="bank1.png"/>
    <sigmans:Portfolio IconImageSource="sigma.png"/>
    <sigmans:Following IconImageSource="star.png"/>




</TabbedPage>
